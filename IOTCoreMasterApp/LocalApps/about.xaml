                    </TextBlock>
                    <TextBlock x:Name="m_SystemFirmwareVersion" Text="" FontSize="24" Foreground="Snow" Width="220" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15,0,0,0" FontWeight="Bold" />
                </StackPanel>
                   -->
               
        </ListView>
        <Border Grid.Row="2" Height="3"  Background="DimGray" />
        <AppBarButton Grid.Row="1" x:Name="appBarButton"
                HorizontalAlignment="Right"   
                Icon="Forward" Label=""   
                VerticalAlignment="Top"   
                Width="50" Height="44"  Click="appBarButton_Click" />


    </Grid>

</Page>
